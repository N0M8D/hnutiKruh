---
const {navData} = Astro.props;
---

{navData && <nav>
  <ul>
    {navData.map(navItem => (
      (<li><a href={navItem.slug} >{navItem.title}</a></li>)
    ))}
  </ul>
</nav> }

<style>
  nav {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    z-index: 1000;
    background: rgba(255,255,255,0.97);
    box-shadow: 0 2px 12px rgba(160,90,44,0.07);
    backdrop-filter: blur(2px);
  }
  nav ul {
    margin: 0 auto;
    padding: 0;
    list-style: none;
    display: flex;
    width: 100%;
    max-width: 1440px;
    justify-content: center;
  }
  nav ul li a {
    text-decoration: none;
    margin-right: 1rem;
    color: inherit;
    opacity: 0.72;
    transition: opacity linear 150ms;
  }
  nav ul li a:hover {
    opacity: 1;
  }
  @media(max-width: 600px) {
    nav {
      display: none;
    }
  }
</style>