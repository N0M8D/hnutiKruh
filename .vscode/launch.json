{
	"version": "0.2.0",
	"configurations": [
		{
			"command": "./node_modules/.bin/astro dev",
			"name": "Development server",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Astro",
			"program": "${workspaceFolder}/node_modules/astro/astro.js",
			"args": [
				"dev"
			],
			"runtimeArgs": [
				"--inspect-brk"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}