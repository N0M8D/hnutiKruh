---
import { Icon } from 'astro-icon/components';
/**
 * File: src/components/selections/EventsList.astro
 *
 * Props:
 *   events: Array<{ 
 *     date: string, 
 *     description: string, 
 *     googleMaps?: string // volitelný odkaz na Google Maps
 *   }>
 */
const { events = [] } = Astro.props;
---
<div class="events-list">
  {events.map((event) => (
    <div class="event-item">
      <div class="event-date">
        <strong>{event.date}</strong>
      </div>
      <div class="event-description">
        {event.description}
      </div>
      {event.googleMaps && (
        <a
          href={event.googleMaps}
          target="_blank"
          rel="noopener noreferrer"
          class="event-map-link"
          title="Zobrazit na mapách"
        >
          <Icon name="mdi:google-maps" width={24} height={24} />
        </a>
      )}
    </div>
  ))}
</div>

<style>
  .events-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .event-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff8f6; /* světlý odstín lososové */
    border: 1px solid #fdded9; /* jemná linka */
    border-radius: 8px;
    padding: 1rem;
  }
  
  .event-date {
    color: #e96c54; /* výraznější barva pro datum */
    font-weight: bold;
    margin-right: 1rem;
  }
  
  .event-description {
    flex: 1;
    color: #333;
  }
  
  .event-map-link {
    margin-left: 1rem;
    text-decoration: none;
    color: inherit;
  }
  
  @media (max-width: 600px) {
    .event-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .event-date {
      margin-bottom: 0.5rem;
    }
    .event-map-link {
      align-self: flex-end;
      margin-top: 0.5rem;
    }
  }
</style>
