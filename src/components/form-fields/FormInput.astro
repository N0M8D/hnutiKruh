---
const {type = "text", label, name, placeholder = "", required, value = ""} = Astro.props;
const id = `field-${name}`;
---

<div class="form-field__container">
  {label && <label for={id} class="form-field__label">{label}{required && <span class="required">*</span>}</label>}
  <div class="form-field__input-wrapper">
    <input 
      type={type} 
      id={id}
      name={name} 
      placeholder={placeholder} 
      required={required} 
      value={value}
      class="form-field__input"
    />
  </div>
</div>

<style>
  .form-field__container {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .form-field__input-wrapper {
    position: relative;
  }

  .form-field__input {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 2px solid var(--form-field-border-color, #ccc);
    color: var(--form-field-input-color, #000000);
    border-radius: var(--form-field-border-radius, 0.25rem);
    background-color: var(--form-field-bg-color, #ffffff);
    outline: none;
    transition: border 0.2s ease;
  }

  .form-field__input:focus {
    border: 2px solid var(--form-field-border-focus-color, #000);
  }

  .form-field__label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--form-field-label-color, #333);
  }

  .required {
    color: var(--form-required-color, #e53935);
    margin-left: 0.25rem;
  }

  .form-field__input:focus + .form-field__label,
  .form-field__input:not(:placeholder-shown) + .form-field__label {
    top: 0.5rem;
    font-size: 0.75rem;
    transform: translateY(0);
    color: var(--form-field-label-focus-color, #333);
  }

  .required {
    color: var(--form-required-color, #e53935);
    margin-left: 0.25rem;
  }
</style>
