</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Náhodná rotace pro každé kolo
    document.querySelectorAll('.circle-border').forEach(el => {
      const deg = Math.floor(Math.random() * 360);
      el.style.transform = `rotate(${deg}deg)`;
    });

    const circles = document.querySelectorAll('.program-circle');
    const contents = document.querySelectorAll('.content-area .circle-content');
    const topics = [
      'zdravotnictvi-socialni', 
      'spolecnost', 
      'bydleni', 
      'skolstvi', 
      'zivotni-prostredi', 
      'mistni-rozvoj', 
      'bezpecnost', 
      'doprava', 
      'kultura', 
      'dane'
    ];
    
    circles.forEach((circle, index) => {
      const summary = circle.querySelector('.circle-summary');
      summary.addEventListener('click', function(e) {
        e.preventDefault();
        // Zavřít všechny ostatní kruhy
        circles.forEach(c => c.removeAttribute('open'));
        contents.forEach(c => c.classList.remove('active'));
        // Otevřít kliknutý kruh
        circle.setAttribute('open', '');
        // Zobrazit odpovídající obsah
        if (topics[index]) {
          const targetContent = document.querySelector(`[data-topic="${topics[index]}"]`);
          if (targetContent) {
            targetContent.classList.add('active');
          }
        }
      });
    });
  });
</script>