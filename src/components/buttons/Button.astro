---
// File: Button.astro
const { href, unelevated, outlined, customIcon, onPrimary, newTab, fullWidth, style } = Astro.props;
const Tag = href ? 'a' : 'button';
---
<Tag
  class={`btn ${unelevated ? "btn--unelevated" : ""} ${outlined ? "btn--outlined" : ""} ${onPrimary ? "btn--on-primary" : ""} ${fullWidth ? "btn--fullwidth" : ""}`}
  href={href}
  target={newTab ? '_blank' : undefined}
  rel={newTab ? 'noopener noreferrer' : undefined}
  style={style}
>
  <slot />
  {customIcon && (
    <span class="custom-icon__span">
      <slot name="icon">custom_icon</slot>
    </span>
  )}
</Tag>

<style>
  .btn {
    width: fit-content;
    padding: 0.44rem 1.2rem;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(120deg, rgba(255,255,255,0.32) 60%, rgba(255,128,128,0.18) 100%);
    color: var(--theme-on-bg);
    border: 0.1px solid var(--theme-primary);
    border-radius: var(--theme-button-border-radius);
    font-weight: 600;
    letter-spacing: 0.03em;
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    box-shadow: 0 4px 16px 0 rgba(255,128,128,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.10);
    transition: background 0.2s, color 0.2s, border-color 0.2s, box-shadow 0.2s;
  }
  /* Nová třída fullwidth */
  .btn--fullwidth {
    width: 100%;
  }
  .btn:hover {
    background: linear-gradient(120deg, rgba(255,255,255,0.44) 60%, rgba(255,128,128,0.28) 100%);
    color: var(--theme-primary-hover);
    border-color: var(--theme-primary-hover);
    box-shadow: 0 6px 24px 0 rgba(255,128,128,0.18), 0 2px 12px 0 rgba(0,0,0,0.12);
  }
  .btn--unelevated {
    background-color: transparent;
    color: var(--theme-on-bg);
  }
  .btn--unelevated:hover {
    background-color: transparent;
    opacity: var(--theme-primary-hover);
  }
  .btn--outlined {
    color: var(--theme-primary);
    background-color: transparent;
    border: 2px solid var(--theme-primary);
    transition: background-color var(--theme-transition);
  }
  .btn--outlined:hover {
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
  }
  .custom-icon__span {
    margin-left: 0.25rem;
    display: flex;
    align-items: center;
  }
  .custom-icon__span :global(svg) {
    width: 24px;
    height: 24px;
  }
  a.btn {
    text-decoration: none;
  }
  button.btn {
    cursor: pointer;
    outline: none;
  }
</style>
