---
// File: Button.astro
const { href, unelevated, outlined, customIcon, onPrimary, newTab, fullWidth, style, campaign } = Astro.props;
const Tag = href ? 'a' : 'button';
---
<Tag
  class={`btn ${unelevated ? "btn--unelevated" : ""} ${outlined ? "btn--outlined" : ""} ${campaign ? "campaign-btn" : ""} ${onPrimary ? "btn--on-primary" : ""} ${fullWidth ? "btn--fullwidth" : ""}`}
  href={href}
  target={newTab ? '_blank' : undefined}
  rel={newTab ? 'noopener noreferrer' : undefined}
  style={style}
>
  <slot />
  {customIcon && (
    <span class="custom-icon__span">
      <slot name="icon">custom_icon</slot>
    </span>
  )}
</Tag>

<style>
  .btn {
    width: fit-content;
    padding: 0 1.2rem; /* Remove vertical padding to allow centering to work better */
    margin: auto 0; /* Add margin auto for vertical centering in flex containers */
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2.75rem; /* Match input field height */
    line-height: 1;
    background: linear-gradient(120deg, rgba(255,255,255,0.32) 60%, rgba(255,128,128,0.18) 100%);
    color: var(--theme-on-bg);
    border: 0.1px solid var(--theme-primary);
    border-radius: var(--theme-button-border-radius);
    font-weight: 600;
    letter-spacing: 0.03em;
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    box-shadow: 0 4px 16px 0 rgba(255,128,128,0.10), 0 1.5px 8px 0 rgba(0,0,0,0.10);
    transition: background 0.2s, color 0.2s, border-color 0.2s, box-shadow 0.2s;
    box-sizing: border-box; /* Ensure padding is included in height calculation */
  }
  /* Nová třída fullwidth */
  .btn--fullwidth {
    width: 100%;
  }
  .btn:hover {
    background: linear-gradient(120deg, rgba(255,255,255,0.44) 60%, rgba(255,128,128,0.28) 100%);
    color: var(--theme-primary-hover);
    border-color: var(--theme-primary-hover);
    box-shadow: 0 6px 24px 0 rgba(255,128,128,0.18), 0 2px 12px 0 rgba(0,0,0,0.12);
  }
  .btn--unelevated {
    background-color: transparent;
    color: var(--theme-on-bg);
  }
  .btn--unelevated:hover {
    background-color: transparent;
    opacity: var(--theme-primary-hover);
  }
  .btn--outlined {
    color: var(--theme-primary);
    background-color: transparent;
    border: 2px solid var(--theme-primary);
    transition: background-color var(--theme-transition);
  }
  .btn--outlined:hover {
    background-color: var(--theme-primary);
    color: var(--theme-on-primary);
  }
  .custom-icon__span {
    margin-left: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .custom-icon__span :global(svg) {
    width: 24px;
    height: 24px;
  }
  a.btn {
    text-decoration: none;
  }
  button.btn {
    cursor: pointer;
    outline: none;
  }

  /* Dočasný styl pro kampaň "Nepřehlédni to" – křídová tabule */
  .campaign-btn {
    position: relative;
    background: linear-gradient(145deg,#252a25 0%, #1f2420 55%, #1a1d1a 100%);
    border:1px solid #3a4239;
    color:#f8f8f5;
    box-shadow:0 1px 3px rgba(0,0,0,.45), inset 0 1px 0 rgba(255,255,255,.05);
    text-shadow:0 1px 2px rgba(255,255,255,.08), 0 0 2px rgba(255,255,255,.12);
    letter-spacing:.02em;
    overflow:hidden;
  }
  .campaign-btn::after{
    content:"";
    position:absolute; inset:0; pointer-events:none; border-radius:inherit;
    background:
      radial-gradient(circle at 28% 22%,rgba(255,255,255,.07),transparent 60%),
      radial-gradient(circle at 75% 68%,rgba(255,255,255,.05),transparent 65%),
      repeating-linear-gradient(92deg,rgba(255,255,255,.05)_0_2px,transparent_2px_6px);
    mix-blend-mode:overlay;
    opacity:.45;
  }
  .campaign-btn:hover,
  .campaign-btn:focus-visible {
    background: linear-gradient(145deg,#2d332d 0%, #242a25 55%, #202320 100%);
    border-color:#485248;
    color:#ffffff;
  }
  .campaign-btn:active { transform:translateY(1px); }
  .campaign-btn:focus-visible { outline:2px solid #ffffff; outline-offset:2px; }
</style>
