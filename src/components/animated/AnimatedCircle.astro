---
// File: src/components/animated/AnimatedCircle.astro

const { direction = 'left', offset = '50%', delay = '0s', image = '/assets/brand/kolo.png', size = '500px', depth = "-100px" } = Astro.props;

const animationName = direction === 'left' ? 'roll-in' : 'roll-in-right';

---

<img
  src={image}
  alt="kruh"
  class={`circle ${direction}`}
  style={`width: ${size}; animation-name: ${animationName}; animation-delay: ${delay}; top: ${offset}; ${direction === 'left' ? `left: ${depth}` : `right: ${depth}`}`}
/>

<style>
  .circle {
    position: absolute;
    opacity: 0.12;
    animation: 3s ease-out forwards;
    pointer-events: none;
    z-index: -1;
  }

  @keyframes roll-in {
    0% { transform: translateX(-600px) rotate(0deg); }
    100% { transform: translateX(0) rotate(360deg); }
  }

  @keyframes roll-in-right {
    0% { transform: translateX(600px) rotate(0deg); }
    100% { transform: translateX(0) rotate(-360deg); }
  }

  @media (max-width: 768px) {
    .circle {
      width: 300px;
    }
  }
</style>